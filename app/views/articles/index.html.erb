<h1>Listing articles</h1>
<p style='height:20px;'></p>
<table width='80%' BORDER=1 CELLPADDING=3 CELLSPACING=1 RULES=ROWS FRAME=BOX>
  <thead>
    <tr align='center'>
      <th>Title</th>
      <th>Description</th>
      <th>Publisher</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr align='center'> 
        <td><%= article.name %></td>
        <td><%= article.description %></td>
        <td><%= article.publisher %></td>
        <td colspan="3"><%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<br/>
<table width='80%'><tr><td align='right'>
<%= link_to 'New Article', new_article_path %>
</td></tr></table>